# Service Configuration
SERVICE_NAME=ai-service
SERVICE_PORT=8000
ENVIRONMENT=development

# MongoDB Configuration
MONGODB_URI=mongodb://admin:password123@mongodb:27017/flouswise?authSource=admin
MONGODB_DATABASE=flouswise
MONGODB_CHAT_COLLECTION=chat_messages

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_TTL=300

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_CHAT_TOPIC=chat.message.sent

# Ollama LLM Configuration
OLLAMA_BASE_URL=http://host.docker.internal:11434
OLLAMA_MODEL=mistral
OLLAMA_TIMEOUT=60

# ChromaDB Configuration
CHROMA_PERSIST_DIR=./chroma_data
CHROMA_COLLECTION_NAME=finance_books

# Embeddings Configuration
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# RAG Configuration
RAG_TOP_K=5
RAG_CHUNK_SIZE=500
RAG_CHUNK_OVERLAP=50

# Finance Service
FINANCE_SERVICE_URL=http://finance-service:8081

# JWT Configuration
JWT_SECRET=your-secret-key-here
JWT_ALGORITHM=HS256
