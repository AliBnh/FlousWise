# Server Configuration
server.port=8080

# MongoDB Configuration
spring.data.mongodb.host=mongodb
spring.data.mongodb.port=27017
spring.data.mongodb.database=flouswise
spring.data.mongodb.username=admin
spring.data.mongodb.password=admin123
spring.data.mongodb.authentication-database=admin

# JWT Configuration
# IMPORTANT: Secret key must be at least 256 bits (32 characters) for HS256 algorithm
# The secret will be injected via environment variable from docker-compose
# This MUST be the same across all microservices!
# Fallback value for local development (same as .env file)
app.jwt.secret=${JWT_SECRET:MyVerySecureJwtSecretKeyThatIsAtLeast256BitsLongForHS256Algorithm}
